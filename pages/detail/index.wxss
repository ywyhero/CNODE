page{
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.detail_head{
    padding: 20rpx;
    background: #f2f2f2;
}
.wxParse{
    background: #f2f2f2;
    padding: 20rpx;
    margin: 0;
    border-bottom:4rpx solid #ddd;
}
.detail_user_img{
    float: left;
    margin-right:20rpx;
}
.detail_user_img image{
    width: 40rpx;
    height: 40rpx;
}
.detail_user{
    float: left;
    margin-top: 20rpx;
}
.detail_user_name{
    float: left;
    font-size: 30rpx;
    font-family: "Microsoft Yahei";
    line-height: 40rpx;
    color: #999;
}
.detail_time{
    float: right;
    margin-top: 20rpx;
    color: #999;
    font-size: 30rpx;
    font-family: "Microsoft Yahei";
    line-height: 40rpx;
}
.comment_li{
    border-bottom: 2rpx solid #ddd;
    padding: 20rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    position: relative;
}
.comment_ding image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}
.comment_name{
    color: #088cce;
    font-size: 30rpx;
    line-height:40rpx;
    float: left;
}
.comment_ding{
    float: right;
    color: #80bd01;
    font-size: 25rpx;
    line-height:30rpx;
    font-family: "Microsoft Yahei";
    position: absolute;
    right: 130rpx;
}
.comment_time{
    float: right;
    font-size: 25rpx;
    line-height:30rpx;
    color: #999;
    margin-left: 70rpx;
    font-family: "Microsoft Yahei";
    margin-top: 6rpx;
}
.comment_content{
    margin-top:20rpx;
    font-size:25rpx;
    line-height:40rpx;
    font-family:"Microsoft Yahei";
    color:#666;
}