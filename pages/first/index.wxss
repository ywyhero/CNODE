.swiper-tab{
    width: 100%;
    text-align: center;
    background: #444444;
    line-height: 80rpx;
    border-bottom: 2rpx solid #444444;
}
.swiper-tab-list{
    font-size: 30rpx;
    display: inline-block;
    width: 20%;
    color: #6BB101;
}
.on{
    color: #fff;
}

.swiper-box{
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
    padding: 20rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;

}
.cnode_new_li{
    padding:30rpx;
    border-bottom:2rpx solid #80bd01;
}
.cnode_new_img{
    float: left;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    overflow: hidden;
    margin-right: 25rpx;
    margin-top: 10rpx;
}
.cnode_new_img image{
    width: 100rpx;
    height: 100rpx;
}
.cnode_new_head_top{
    height: 50rpx;
}
.cnode_new_user{
    color: #ddd;
    font-family: "Microsoft Yahei";
    font-size: 35rpx;
    float: left;
}
.cnode_new_time{
    color: #ddd;
    font-family: "Microsoft Yahei";
    font-size: 35rpx;
    float: right;
}
.cnode_new_head_bottom{
    margin-top: 15rpx;
}
.cnode_new_tab{
    font-family: "Microsoft Yahei";
    font-size:30rpx;
    float:left;
    color:red;
    width:80rpx;
    height:40rpx;
    line-height:40rpx;
    border:2rpx solid red;
    text-align:center;
    margin-right: 20rpx;
}
.cnode_new_title{
    color: #000;
    font-family: "Microsoft Yahei";
    font-size:30rpx;
    line-height:40rpx;
}
.cnode_new_foot{
    height: 70rpx;
    margin-top: 50rpx;
}
.cnode_new_foot image{
    width: 50rpx;
    height: 50rpx;
    margin-top: 5rpx;
}
.cnode_new_base{
    float: left;
    margin-right: 40rpx;
    width: 190rpx;
}
.cnode_new_share{
    float: right;
}
.cnode_new_share_img,
.cnode_new_read_img,
.cnode_new_comment_img{
    float: left;
    margin-right: 20rpx;
}
.cnode_new_num{
    color: #ddd;
    font-family: "Microsoft Yahei";
    font-size:40rpx;
    line-height:60rpx;
    float: left;
}